<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <!-- Base Definition -->
    <definition name="common"
                template="/WEB-INF/views/tiles/layouts/classic.jsp">
        <put-attribute name="footer" value="/WEB-INF/views/tiles/template/footer.jsp"/>
    </definition>

    <!-- HomePage-->
    <definition name="index" extends="common">
        <put-attribute name="title" value="Java Blog Aggregator"/>
        <put-attribute name="body" value="/WEB-INF/views/tiles/template/index.jsp"/>
        <put-attribute name="current" value="index"/>
    </definition>


    <!-- UsersPage-->
    <definition name="users" extends="common">
        <put-attribute name="title" value="Users page"/>
        <put-attribute name="body" value="/WEB-INF/views/tiles/template/users.jsp"/>
        <put-attribute name="current" value="users"/>
    </definition>

    <!-- UsersDetail-->
    <definition name="user-detail" extends="common">
        <put-attribute name="title" value="Users page"/>
        <put-attribute name="body" value="/WEB-INF/views/tiles/template/user-detail.jsp"/>
        <put-attribute name="current" value="users"/>
    </definition>

    <!-- UsersRegister-->
    <definition name="user-register" extends="common">
        <put-attribute name="title" value="Users registration"/>
        <put-attribute name="body" value="/WEB-INF/views/tiles/template/user-register.jsp"/>
        <put-attribute name="current" value="register"/>
    </definition>

    <!-- Login-->
    <definition name="login" extends="common">
        <put-attribute name="title" value="Login page"/>
        <put-attribute name="body" value="/WEB-INF/views/tiles/template/login.jsp"/>
        <put-attribute name="current" value="login"/>
    </definition>


</tiles-definitions>